<Window x:Class="Obl1Dm2Sem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:Obl1Dm2Sem"
        Title="Watch Clock" Height="350" Width="525"
        Background="Black" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="0,0,0,250">
            <Button Content="Binary Clock" HorizontalAlignment="Right" Margin="0,15,30,0" VerticalAlignment="Top" Width="90" Click="ButtonShowBin_Click"/>
            <Button Content="Decimal Clock" HorizontalAlignment="Left" Margin="30,-20,0,0" VerticalAlignment="Top" Width="90" Click="ButtonShowDecimal_Click"/>
            <Button Content="Hexa Clock" HorizontalAlignment="Center" Margin="214,-20,215,0" VerticalAlignment="Top" Width="90" Click="ButtonShowHex_Click"/>
        </StackPanel>
        <StackPanel Margin="0,76,0,0">
            <Frame x:Name="mainPage" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
    </Grid>
</Window>
  